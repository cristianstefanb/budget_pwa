<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="csb.budget_pwa.controller.Dashboard"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showHeader="true" showFooter="true">
				<headerContent>
					<OverflowToolbar >
						<ToolbarSpacer/>
						<Button icon="sap-icon://favorite-list" type="Transparent"/>
						<Button icon="sap-icon://settings" type="Transparent" press=".onSettings"/>
					</OverflowToolbar>
				</headerContent>
				<content>
					<VBox>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Budget" frameType="TwoByHalf">
							<TileContent unit="EUR" footer="Current Quarter">
								<NumericContent scale="M" value="1.96" valueColor="Error" indicator="Up" withMargin="false"/>
							</TileContent>
						</GenericTile>
						<HBox>
							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Cumulative Totals" subheader="Expenses" press="press">
								<TileContent unit="â‚¬ EUR">
									<NumericContent value="17,36" icon="sap-icon://line-charts" withMargin="false"/>
								</TileContent>
							</GenericTile>
							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Cumulative Totals" subheader="Expenses" press="press">
								<TileContent unit="Unit" footer="Footer Text">
									<NumericContent value="0" icon="sap-icon://line-charts" withMargin="false"/>
								</TileContent>
							</GenericTile>
						</HBox>
					</VBox>
				</content>
				<footer>
					<OverflowToolbar >
						<ToolbarSpacer/>
						<Button text="add expence" iconFirst="false" icon="sap-icon://add" type="Transparent"/>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>